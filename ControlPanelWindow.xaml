<Window x:Class="AeroDesk.ControlPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control Panel" Height="300" Width="450">
    <Grid>
        <Slider x:Name="BlurIntensitySlider" Minimum="0" Maximum="10" Value="5" TickFrequency="1" 
                HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10"/>

        <CheckBox x:Name="OverlayCheckBox" Content="Always on Top" HorizontalAlignment="Left" 
                  VerticalAlignment="Center" Margin="10,50,0,0"/>

        <CheckBox x:Name="ShowOnTaskbar" Content="Show on taskbar" HorizontalAlignment="Left"
                  VerticalAlignment="Center" Margin="10,100,0,0"/>

        <Button Content="Apply" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" 
                Click="ApplyButton_Click"/>
    </Grid>
</Window>
